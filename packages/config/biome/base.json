{
  "$schema": "../../../node_modules/@biomejs/biome/configuration_schema.json",
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  },
  "files": {
    "includes": [
      "**/*.{ts,tsx,js,jsx,json,css}",
      "!**/*.d.ts",
      "!**/node_modules/**",
      "!**/dist/**",
      "!**/build/**",
      "!**/.turbo/**"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": false,
      "correctness": {
        "noUnusedVariables": "error",
        "noUnusedImports": "error",
        "noConstantCondition": "error"
      },
      "suspicious": {
        "noExplicitAny": "error",
        "noDoubleEquals": "error",
        "noShadowRestrictedNames": "error"
      },
      "performance": {
        "noDelete": "error"
      },
      "complexity": {
        "noExtraBooleanCast": "error",
        "noForEach": "off"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "error"
      }
    }
  }
}